{% extends 'base.blog.html.twig' %}

{% block title %}{{ result.slug }}{% endblock %}

{% block body %}

    <div class="row container">
        <div class="col s12 center-align">
            <h1>{{ result.title }}</h1>
        </div>

        <div class="col s12 divider pink-p"></div>

        <div class="col s12 right-align paramBlog">
            <span class="badge art">{{ result.idCat }}</span>
            <span class="badge art">{{ result.date }}</span>
        </div>

        <div class="col s12 content">
            {{ result.content|raw }}
        </div>

    </div>

{% endblock %}
