{% extends 'admin/admin.home.html.twig' %}

{% block title %}Admin - New user entry{% endblock %}


{% block body %}
    <div class="row container">

        {% block headercontent %}
            <div class="col s12 header-info">
                <div class="col s12 divider pink-p"></div>

                <div class="col s12 paramBlog">
                    <h3>Cr√©ation d'un utilisateur</h3>
                </div>

                <div class="col s12 divider pink-p divider-bottom"></div>
            </div>
        {% endblock %}

        {% block form %}
            <div class="col s12 content">
                {{ form_start(form) }}

                <div class="col m6 s12">{{ form_row(form.username) }}</div>
                <div class="col m6 s12">{{ form_row(form.password, {'type': 'password'}) }}</div>
                <div class="col s12 paramBlog">
                    <div>
                        <button class="btn waves-effect waves-light" type="submit" name="action">Enregistrer
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        {% endblock %}

    </div>
{% endblock %}
