{% extends 'admin/admin.home.html.twig' %}

{% block title %}Admin - {{ result.slug }}{% endblock %}

{% block stylesheets %}
    <!--@ckeditor-->
    <script src="../ckeditor4/ckeditor.js"></script>
{% endblock %}

{% block body %}
    <div class="row container">

        <div class="col s12">
            <table class="centered">
                <thead>
                    <tr>
                        <th>Modification de : {{ result.title }}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Id :</td><td>{{ result.id }}</td>
                        <td>Status :</td><td>{{ result.status }}</td>
                        <td>Slug :</td><td>{{ result.slug }}</td>
                        <td>Cr√©ation :</td><td>{{ result.date }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col s12 content">
            {{ form_start(form) }}

                <div class="col s6">{{ form_row(form.id_cat) }}</div>
                <div class="col s6">{{ form_row(form.status) }}</div>
                <div class="col s6">{{ form_row(form.title) }}</div>
                <div class="col s6">{{ form_row(form.author) }}</div>
                <div id="editor" class="col s12">{{ form_row(form.content) }}</div>

            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    <!--@replace the textarea with ckeditor-->
    <script>
        $editor = document.querySelector( '.materialize-textarea' );
        CKEDITOR.replace($editor);
    </script>
{% endblock %}