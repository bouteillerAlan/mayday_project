{% extends 'admin/admin.home.html.twig' %}

{% block title %}Admin - {{ result.slug }}{% endblock %}

{% block stylesheets %}
    <!-- @personal theme for ckeditor -->
    <link type="text/css" rel="stylesheet" href="../ckeditor5-build-classic/theme/theme.css"/>
{% endblock %}

{% block body %}
    <div class="row container">

        <div class="col s12">
            <table class="centered">
                <thead>
                    <tr>
                        <th>Modification de : {{ result.title }}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Id :</td><td>{{ result.id }}</td>
                        <td>Status :</td><td>{{ result.status }}</td>
                        <td>Slug :</td><td>{{ result.slug }}</td>
                        <td>Cr√©ation :</td><td>{{ result.date }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col s12 content">
            {{ form_start(form) }}
                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    <!--@ckeditor-->
    <script src="../ckeditor5-build-classic/ckeditor.js"></script>
    <!--@replace the textarea with ckeditor-->
    <script type="text/javascript">
        ClassicEditor
            .create( document.querySelector( '.materialize-textarea' ) )
            .then( editor => {
                console.log( editor );
            } )
            .catch( error => {
                console.error( error );
            } );
    </script>
{% endblock %}